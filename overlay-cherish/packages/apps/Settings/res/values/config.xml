<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Whether to show refresh rate controls in display settings -->
    <bool name="config_show_refresh_rate_controls">true</bool>
    
    <!-- Device specific doze package -->
    <string name="config_customDozePackage">org.lineageos.settings.doze/org.lineageos.settings.doze.DozeSettingsActivity</string>

    <!-- Adaptive Charging -->
    <bool name="config_supportAdaptiveCharging">true</bool>

    <!-- Whether SELinux status should be shown or not. -->
    <bool name="config_show_selinux_status">true</bool>

    <!-- Battery Health -->
    <bool name="config_supportBatteryHealth">true</bool>
    <string name="config_batDesCap">/sys/class/power_supply/battery/batt_full_design</string>
    <string name="config_batCurCap">/sys/class/power_supply/battery/batt_fcc</string>
    <string name="config_batChargeCycle">/sys/class/power_supply/battery/cycle_count</string>
    <string name="config_batteryCalculatedCapacity">/sys/class/power_supply/battery/batt_fcc</string>
    <string name="config_batteryDesignCapacity">/sys/class/power_supply/battery/batt_full_design</string>
    <string name="config_batteryChargeCycles">/sys/class/power_supply/battery/cycle_count</string>

    <!-- Smart Charging -->
    <bool name="config_supportSmartCharging">true</bool>

</resources>
